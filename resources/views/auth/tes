    <!-- Added preload script to prevent layout shift -->
    <script>
        // Preload sidebar state to prevent layout shift
        (function () {
            const savedState = localStorage.getItem('sidebarCollapsed');
            const isCollapsed = savedState === 'true';

            // Apply initial styles immediately to prevent FOUC
            const style = document.createElement('style');
            style.innerHTML = `
                .main-content-preload {
                    margin-left: ${isCollapsed ? '80px' : '230px'} !important;
                    transition: none !important;
                }
                .sidebar-preload {
                    width: ${isCollapsed ? '80px' : '230px'} !important;
                    transition: none !important;
                }
                @media (max-width: 768px) {
                    .main-content-preload {
                        margin-left: 0 !important;
                    }
                }
            `;
            document.head.appendChild(style);

            // Store state for Alpine.js
            window.initialSidebarState = isCollapsed;
        })();
    </script>

